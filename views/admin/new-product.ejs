<!DOCTYPE html>
<html lang="sv">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>
      <%= typeof title !== 'undefined' ? title : 'Administration' %>
    </title>
    <!-- Bootstrap CSS -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <!-- Font Awesome -->
    <link
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css"
      rel="stylesheet"
    />
    <style>
      body {
        background-color: #f8f9fa;
        margin: 0;
        padding: 0;
      }
      .admin-sidebar {
        background-color: #fff;
        width: 250px;
        min-height: 100vh;
        border-right: 1px solid #dee2e6;
      }
      .admin-nav-link.active {
        font-weight: bold;
        color: #0d6efd !important;
      }
      .footer {
        padding: 1rem 0;
        background-color: #f8f9fa;
        border-top: 1px solid #dee2e6;
      }
      #main-content {
        padding: 1rem;
        flex: 1;
      }
      .page-container {
        display: flex;
        min-height: 100vh;
      }
    </style>
  </head>
  <body>
    <!-- Top Administration Bar -->
    <header class="navbar navbar-dark bg-dark p-0 shadow" id="admin-top-bar">
      <a class="navbar-brand px-3 fs-6" href="/admin/products"
        >Administration</a
      >
    </header>

    <div class="page-container">
      <!-- Left Sidebar Navigation -->
      <nav id="admin-sidebar-nav" class="admin-sidebar">
        <div class="pt-3">
          <ul class="nav flex-column">
            <li class="nav-item">
              <a
                class="nav-link text-dark admin-nav-link active"
                href="/admin/products"
              >
                Produkter
              </a>
            </li>
          </ul>
        </div>
      </nav>

      <!-- Main Content Area -->
      <main id="main-content">
        <div class="pt-3 pb-2 mb-3 border-bottom">
          <h1 class="h2" id="page-title">Ny produkt</h1>
        </div>

        <!-- New Product Form Card -->
        <div class="card shadow-sm" id="form-card">
          <div class="card-body" id="card-body">
            <form action="/admin/products" method="POST" id="form">
              <!-- Namn -->
              <div class="mb-3" id="name-group">
                <label for="name" class="form-label"
                  >Namn <span class="text-danger">*</span></label
                >
                <input
                  type="text"
                  class="form-control"
                  id="name"
                  name="name"
                  required
                />
              </div>

              <!-- Beskrivning -->
              <div class="mb-3" id="desc-group">
                <label for="description" class="form-label"
                  >Beskrivning <span class="text-danger">*</span></label
                >
                <textarea
                  class="form-control"
                  id="description"
                  name="description"
                  rows="4"
                  required
                ></textarea>
              </div>

              <!-- Bild -->
              <div class="mb-3" id="img-group">
                <label for="image" class="form-label"
                  >Bild (URL) <span class="text-danger">*</span></label
                >
                <input
                  type="url"
                  class="form-control"
                  id="image"
                  name="image"
                  placeholder="https://example.com/image.jpg"
                  required
                />
                <div class="form-text" id="img-help">
                  Ange en fullst채ndig URL till produktbilden.
                </div>
              </div>

              <!-- M채rke -->
              <div class="mb-3" id="brand-group">
                <label for="brand" class="form-label"
                  >M채rke <span class="text-danger">*</span></label
                >
                <input
                  type="text"
                  class="form-control"
                  id="brand"
                  name="brand"
                  required
                />
              </div>

              <!-- SKU -->
              <div class="mb-3" id="sku-group">
                <label for="sku" class="form-label"
                  >SKU <span class="text-danger">*</span></label
                >
                <input
                  type="text"
                  class="form-control"
                  id="sku"
                  name="sku"
                  required
                />
              </div>

              <!-- Pris -->
              <div class="mb-3" id="price-group">
                <label for="price" class="form-label"
                  >Pris (SEK) <span class="text-danger">*</span></label
                >
                <input
                  type="number"
                  class="form-control"
                  id="price"
                  name="price"
                  min="0"
                  step="0.01"
                  required
                  placeholder="t.ex. 199.90"
                />
              </div>

              <!-- Submit Button -->
              <div id="submit-group" class="pt-2">
                <button type="submit" class="btn btn-primary" id="submit-btn">
                  <i class="fas fa-plus me-1"></i> L채gg till produkt
                </button>
              </div>
            </form>
          </div>
        </div>
      </main>
    </div>

    <!-- Footer -->
    <footer class="footer">
      <div class="container text-center">
        <p class="mb-0"><i class="far fa-copyright"></i> Educado AB</p>
      </div>
    </footer>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
