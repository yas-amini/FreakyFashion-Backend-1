<!-- ===== ADMIN NEW PRODUCT PAGE ===== -->
<!-- 
  Admin new product form page:
  - Top navigation bar
  - Left sidebar with navigation links
  - Main content area with product form
  - Responsive layout
  - Form validation for required fields
-->
<!DOCTYPE html>
<html lang="sv">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>
      <%= typeof title !== 'undefined' ? title : 'Administration' %>
    </title>
    <!-- Bootstrap CSS -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <!-- Font Awesome -->
    <link
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css"
      rel="stylesheet"
    />
  </head>
  <body>
    <!-- Top Administration Bar -->
    <header id="admin-header" class="navbar navbar-dark bg-dark p-0 shadow">
      <a class="navbar-brand px-3 fs-6" href="/admin/products"
        >Administration</a
      >
    </header>

    <div class="page-container">
      <!-- Left Sidebar Navigation -->
      <nav id="admin-sidebar" class="admin-sidebar">
        <div class="pt-3">
          <ul class="nav flex-column">
            <li class="nav-item">
              <a
                class="nav-link text-dark admin-nav-link active"
                href="/admin/products"
              >
                Produkter
              </a>
            </li>
          </ul>
        </div>
      </nav>

      <!-- Main Content Area -->
      <main id="admin-content">
        <div class="pt-3 pb-2 mb-3 border-bottom">
          <h1 id="admin-title" class="h2">Ny produkt</h1>
        </div>

        <!-- New Product Form Card -->
        <div id="admin-form-card" class="card shadow-sm">
          <div id="admin-form-body" class="card-body">
            <form id="admin-form" action="/admin/products" method="POST">
              <!-- Namn -->
              <div id="admin-name-group" class="mb-3">
                <label for="name" class="form-label"
                  >Namn <span class="text-danger">*</span></label
                >
                <input
                  type="text"
                  class="form-control"
                  id="name"
                  name="name"
                  required
                />
              </div>

              <!-- Beskrivning -->
              <div id="admin-desc-group" class="mb-3">
                <label for="description" class="form-label"
                  >Beskrivning <span class="text-danger">*</span></label
                >
                <textarea
                  class="form-control"
                  id="description"
                  name="description"
                  rows="4"
                  required
                ></textarea>
              </div>

              <!-- Bild -->
              <div id="admin-img-group" class="mb-3">
                <label for="image" class="form-label"
                  >Bild (URL) <span class="text-danger">*</span></label
                >
                <input
                  type="url"
                  class="form-control"
                  id="image"
                  name="image"
                  placeholder="https://example.com/image.jpg"
                  required
                />
                <div id="admin-img-help" class="form-text">
                  Ange en fullst채ndig URL till produktbilden.
                </div>
              </div>

              <!-- M채rke -->
              <div id="admin-brand-group" class="mb-3">
                <label for="brand" class="form-label"
                  >M채rke <span class="text-danger">*</span></label
                >
                <input
                  type="text"
                  class="form-control"
                  id="brand"
                  name="brand"
                  required
                />
              </div>

              <!-- SKU -->
              <div id="admin-sku-group" class="mb-3">
                <label for="sku" class="form-label"
                  >SKU <span class="text-danger">*</span></label
                >
                <input
                  type="text"
                  class="form-control"
                  id="sku"
                  name="sku"
                  required
                />
              </div>

              <!-- Pris -->
              <div id="admin-price-group" class="mb-3">
                <label for="price" class="form-label"
                  >Pris (SEK) <span class="text-danger">*</span></label
                >
                <input
                  type="number"
                  class="form-control"
                  id="price"
                  name="price"
                  min="0"
                  step="0.01"
                  required
                  placeholder="t.ex. 199.90"
                />
              </div>

              <!-- Submit Button -->
              <div id="admin-submit-group" class="pt-2">
                <button
                  type="submit"
                  id="admin-submit-btn"
                  class="btn btn-primary"
                >
                  <i class="fas fa-plus me-1"></i> L채gg till produkt
                </button>
              </div>
            </form>
          </div>
        </div>
      </main>
    </div>

    <!-- Footer -->
    <footer class="footer">
      <div class="container text-center">
        <p class="mb-0"><i class="far fa-copyright"></i> Educado AB</p>
      </div>
    </footer>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
