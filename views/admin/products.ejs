<!DOCTYPE html>
<html lang="sv">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>
      <%= typeof title !== 'undefined' ? title : 'Administration' %>
    </title>
    <!-- Bootstrap CSS -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <!-- Font Awesome -->
    <link
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css"
      rel="stylesheet"
    />
    <style>
      body {
        background-color: #f8f9fa;
        margin: 0;
        padding: 0;
      }
      .admin-sidebar {
        background-color: #fff;
        width: 250px;
        min-height: 100vh;
        border-right: 1px solid #dee2e6;
      }
      .admin-nav-link.active {
        font-weight: bold;
        color: #0d6efd !important;
      }
      .footer {
        padding: 1rem 0;
        background-color: #f8f9fa;
        border-top: 1px solid #dee2e6;
      }
      #adminproducts-content {
        padding: 1rem;
        flex: 1;
      }
      .page-container {
        display: flex;
        min-height: 100vh;
      }
    </style>
  </head>
  <body>
    <!-- Top Administration Bar -->
    <header
      class="navbar navbar-dark bg-dark p-0 shadow"
      id="adminproducts-header"
    >
      <a class="navbar-brand px-3 fs-6" href="/admin/products"
        >Administration</a
      >
    </header>

    <div class="page-container">
      <!-- Left Sidebar Navigation -->
      <nav id="adminproducts-nav" class="admin-sidebar">
        <div class="pt-3">
          <ul class="nav flex-column">
            <li class="nav-item">
              <a
                class="nav-link text-dark admin-nav-link <% if(currentAdminPage === 'products') { %>active<% } %>"
                href="/admin/products"
              >
                Produkter
              </a>
            </li>
            <!-- Add other admin links here in the future, e.g., Orders, Users -->
          </ul>
        </div>
      </nav>

      <!-- Main Content Area -->
      <main id="adminproducts-content">
        <div class="pt-3 pb-2 mb-3 border-bottom">
          <h1 class="h2" id="adminproducts-title">Produkter</h1>
        </div>

        <!-- Products List Card -->
        <div class="card shadow-sm" id="adminproducts-card">
          <div class="card-header bg-white py-3">
            <div class="d-flex justify-content-end">
              <a
                href="/admin/products/new"
                class="btn btn-primary btn-sm"
                id="adminproducts-add-button"
              >
                <i class="fas fa-plus me-1"></i> Ny produkt
              </a>
            </div>
          </div>
          <div class="card-body" id="adminproducts-card-body">
            <% if (products && products.length > 0) { %>
            <div class="table-responsive" id="adminproducts-table-wrap">
              <table
                class="table table-striped table-hover"
                id="adminproducts-table"
              >
                <thead>
                  <tr>
                    <th scope="col">Namn</th>
                    <th scope="col">SKU</th>
                    <th scope="col">Pris</th>
                    <th scope="col" class="text-end">Åtgärder</th>
                  </tr>
                </thead>
                <tbody>
                  <% products.forEach((product) => { %>
                  <tr>
                    <td><%= product.name %></td>
                    <td><%= product.sku %></td>
                    <td><%= product.price %> SEK</td>
                    <td class="text-end">
                      <a href="#" class="btn btn-outline-secondary btn-sm"
                        ><i class="fas fa-edit"></i
                      ></a>
                      <a href="#" class="btn btn-outline-danger btn-sm"
                        ><i class="fas fa-trash"></i
                      ></a>
                    </td>
                  </tr>
                  <% }) %>
                </tbody>
              </table>
            </div>
            <% } else { %>
            <div class="text-center py-4" id="adminproducts-empty-message">
              <p class="lead text-muted">Inga produkter har lagts till ännu.</p>
            </div>
            <% } %>
          </div>
        </div>
      </main>
    </div>

    <!-- Footer -->
    <footer class="footer">
      <div class="container text-center">
        <p class="mb-0"><i class="far fa-copyright"></i> Educado AB</p>
      </div>
    </footer>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
