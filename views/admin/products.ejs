<!-- ===== ADMIN PRODUCTS PAGE ===== -->
<!-- 
  Admin products management page:
  - Top navigation bar
  - Left sidebar with navigation links
  - Main content area with products table
  - Responsive layout
  - Product listing with actions (edit/delete)
-->
<!DOCTYPE html>
<html lang="sv">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>
      <%= typeof title !== 'undefined' ? title : 'Administration' %>
    </title>
    <!-- Bootstrap CSS -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <!-- Font Awesome -->
    <link
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css"
      rel="stylesheet"
    />
    <!-- Custom CSS -->
    <link href="/stylesheets/style.css" rel="stylesheet" />
  </head>
  <body>
    <!-- Top Administration Bar -->
    <header id="admin-header" class="navbar navbar-dark bg-dark p-0 shadow">
      <a class="navbar-brand px-3 fs-6" href="/admin/products"
        >Administration</a
      >
    </header>

    <div class="page-container">
      <!-- Left Sidebar Navigation -->
      <nav id="admin-sidebar" class="admin-sidebar">
        <div class="pt-3">
          <ul class="nav flex-column">
            <li class="nav-item">
              <a
                class="nav-link text-dark admin-nav-link <% if(currentAdminPage === 'products') { %>active<% } %>"
                href="/admin/products"
              >
                Produkter
              </a>
            </li>
            <!-- Add other admin links here in the future, e.g., Orders, Users -->
          </ul>
        </div>
      </nav>

      <!-- Main Content Area -->
      <main id="admin-content">
        <!-- Heading and Add Product Button -->
        <div
          class="pt-3 pb-2 mb-3 border-bottom d-flex justify-content-between align-items-center"
        >
          <h1 id="admin-title" class="h2 mb-0">Produkter</h1>
          <a href="/admin/products/new" class="btn btn-primary">Ny produkt</a>
        </div>

        <!-- Products List Card -->
        <div id="admin-card" class="card shadow-sm">
          <div id="admin-card-body" class="card-body">
            <div id="admin-table-wrapper" class="table-responsive">
              <% if (products && products.length > 0) { %>
              <table
                class="table table-striped table-hover"
                id="admin-products-table"
              >
                <thead>
                  <tr>
                    <th scope="col">Namn</th>
                    <th scope="col">SKU</th>
                    <th scope="col">Pris</th>
                    <th scope="col" class="text-end">Åtgärder</th>
                  </tr>
                </thead>
                <tbody>
                  <% products.forEach((product) => { %>
                  <tr>
                    <td><%= product.name %></td>
                    <td><%= product.sku %></td>
                    <td><%= product.price %> SEK</td>
                    <td class="text-end">
                      <a href="#" class="btn btn-outline-secondary btn-sm"
                        ><i class="fas fa-edit"></i
                      ></a>
                      <a href="#" class="btn btn-outline-danger btn-sm"
                        ><i class="fas fa-trash"></i
                      ></a>
                    </td>
                  </tr>
                  <% }) %>
                </tbody>
              </table>
              <% } else { %>
              <div class="text-center py-4" id="admin-empty-message">
                <p class="lead text-muted">
                  Inga produkter har lagts till ännu.
                </p>
              </div>
              <% } %>
            </div>
          </div>
        </div>
      </main>
    </div>

    <!-- Footer -->
    <footer class="footer">
      <div class="container text-center">
        <p class="mb-0"><i class="far fa-copyright"></i> Educado AB</p>
      </div>
    </footer>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
