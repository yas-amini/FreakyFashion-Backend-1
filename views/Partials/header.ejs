<!-- ===== SITE HEADER COMPONENT ===== -->
<!-- 
  Main site header containing:
  - Logo and branding
  - Search functionality
  - User actions (favorites, cart)
  - Main navigation menu
  - Responsive design for mobile and desktop
-->
<header id="site-header" class="border-bottom">
  <!-- Header Container -->
  <div id="site-header-container" class="container-fluid px-0">
    <!-- Header Top Section: Logo, Search, User Actions -->
    <div id="site-header-top" class="py-3">
      <!-- Brand Logo -->
      <div id="site-header-logo" class="text-center mb-3">
        <a
          id="site-header-logo-link"
          href="/"
          class="text-decoration-none d-inline-block w-100"
          aria-label="Freaky Fashion startsida"
        >
          <img
            id="site-header-logo-image"
            src="https://placehold.co/1200x400"
            alt="Freaky Fashion Logo"
            class="img-fluid w-100 object-fit-contain"
          />
        </a>
      </div>

      <!-- Search and User Actions Section -->
      <div
        id="site-header-actions"
        class="d-flex justify-content-center align-items-center"
      >
        <!-- Search Form -->
        <div id="site-header-search" class="me-3">
          <form
            id="site-header-search-form"
            action="/search"
            method="GET"
            class="d-flex"
          >
            <input
              id="site-header-search-input"
              type="text"
              name="q"
              placeholder="Sök produkt"
              class="form-control me-2"
            />
            <button
              id="site-header-search-button"
              type="submit"
              class="btn btn-dark"
              aria-label="Sök"
            >
              <i id="site-header-search-icon" class="fas fa-search"></i>
            </button>
          </form>
        </div>

        <!-- User Action Icons -->
        <div id="site-header-user-actions" class="d-flex">
          <a
            id="site-header-favorites-link"
            href="#"
            class="text-dark text-decoration-none me-3"
            aria-label="Favoriter"
          >
            <i id="site-header-favorites-icon" class="far fa-heart fs-5"></i>
          </a>
          <a
            id="site-header-cart-link"
            href="#"
            class="text-dark text-decoration-none"
            aria-label="Varukorg"
          >
            <i id="site-header-cart-icon" class="fas fa-shopping-cart fs-5"></i>
          </a>
        </div>
      </div>
    </div>

    <!-- Main Navigation Section -->
    <div id="site-header-navigation" class="border-top">
      <nav id="site-header-nav" class="py-2">
        <!-- Navigation Links -->
        <div id="site-header-nav-links" class="d-flex">
          <a
            id="site-header-nav-link-news"
            href="#"
            class="text-decoration-none text-dark py-1"
            >Nyheter</a
          >
          <a
            id="site-header-nav-link-toplist"
            href="#"
            class="text-decoration-none text-dark py-1"
            >Topplistan</a
          >
          <a
            id="site-header-nav-link-sale"
            href="#"
            class="text-decoration-none text-dark py-1"
            >Rea</a
          >
          <a
            id="site-header-nav-link-campaigns"
            href="#"
            class="text-decoration-none text-dark py-1"
            >Kampanjer</a
          >
        </div>
      </nav>
    </div>
  </div>
</header>
