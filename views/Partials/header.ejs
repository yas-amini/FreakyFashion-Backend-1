<header class="border-bottom">
  <!-- Main container -->
  <div class="container-fluid px-0" id="main-container">
    <!-- Top section -->
    <div
      class="d-flex flex-column flex-sm-row justify-content-sm-between align-items-sm-center py-3"
      id="top-row"
    >
      <!-- Logo  -->
      <div
        id="logo-container"
        class="text-center text-sm-start w-100 w-sm-auto mb-3 mb-sm-0"
      >
        <a
          href="/"
          class="text-decoration-none d-inline-block w-100"
          aria-label="Freaky Fashion startsida"
        >
          <img
            src="https://placehold.co/400x200"
            alt="Freaky Fashion Logo"
            class="img-fluid w-100"
            style="max-height: 50px; object-fit: contain"
          />
        </a>
      </div>

      <!-- Search and icons-->
      <div
        class="d-flex flex-row justify-content-center w-100 w-sm-auto px-sm-4"
        id="search-icons-container"
      >
        <!-- Search bar -->
        <div id="search-container" class="me-3">
          <form action="/search" method="GET" class="d-flex">
            <input
              type="text"
              name="q"
              placeholder="Sök produkt"
              class="form-control me-2"
            />
            <button type="submit" class="btn btn-dark" aria-label="Sök">
              <i class="fas fa-search"></i>
            </button>
          </form>
        </div>

        <!-- Icons -->
        <div class="d-flex" id="icons-container">
          <a
            href="#"
            class="text-dark text-decoration-none me-3"
            id="heart-icon"
            aria-label="Favoriter"
          >
            <i class="far fa-heart fs-5"></i>
          </a>
          <a
            href="#"
            class="text-dark text-decoration-none"
            id="cart-icon"
            aria-label="Varukorg"
          >
            <i class="fas fa-shopping-cart fs-5"></i>
          </a>
        </div>
      </div>
    </div>

    <!-- Navigation links -->
    <div id="navigation-row" class="border-top">
      <nav class="py-2 px-4" id="main-navigation">
        <!-- Links-->
        <div class="d-flex flex-column align-items-start" id="links-container">
          <a href="#" class="text-decoration-none text-dark py-1">Nyheter</a>
          <a href="#" class="text-decoration-none text-dark py-1">Topplistan</a>
          <a href="#" class="text-decoration-none text-dark py-1">Rea</a>
          <a href="#" class="text-decoration-none text-dark py-1">Kampanjer</a>
        </div>
      </nav>
    </div>
  </div>
</header>
