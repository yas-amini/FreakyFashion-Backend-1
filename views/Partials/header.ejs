<header class="border-bottom">
  <!-- Main container -->
  <div class="container-fluid px-0" id="header-main">
    <!-- Top section -->
    <div class="py-3" id="header-top">
      <!-- Logo -->
      <div id="logo" class="text-center mb-3">
        <a
          href="/"
          class="text-decoration-none d-inline-block w-100"
          aria-label="Freaky Fashion startsida"
        >
          <img
            src="https://placehold.co/1200x400"
            alt="Freaky Fashion Logo"
            class="img-fluid w-100"
            style="object-fit: contain"
          />
        </a>
      </div>

      <!-- Search and icons container -->
      <div
        id="search-icons"
        class="d-flex justify-content-center align-items-center"
      >
        <!-- Search bar -->
        <div id="search" class="me-3">
          <form action="/search" method="GET" class="d-flex">
            <input
              type="text"
              name="q"
              placeholder="Sök produkt"
              class="form-control me-2"
            />
            <button type="submit" class="btn btn-dark" aria-label="Sök">
              <i class="fas fa-search"></i>
            </button>
          </form>
        </div>

        <!-- Icons -->
        <div id="icons" class="d-flex">
          <a
            href="#"
            class="text-dark text-decoration-none me-3"
            id="favorite"
            aria-label="Favoriter"
          >
            <i class="far fa-heart fs-5"></i>
          </a>
          <a
            href="#"
            class="text-dark text-decoration-none"
            id="cart"
            aria-label="Varukorg"
          >
            <i class="fas fa-shopping-cart fs-5"></i>
          </a>
        </div>
      </div>
    </div>

    <!-- Navigation links -->
    <div id="nav" class="border-top">
      <nav class="py-2" id="menu">
        <!-- Links-->
        <div id="links" class="d-flex">
          <a href="#" class="text-decoration-none text-dark py-1">Nyheter</a>
          <a href="#" class="text-decoration-none text-dark py-1">Topplistan</a>
          <a href="#" class="text-decoration-none text-dark py-1">Rea</a>
          <a href="#" class="text-decoration-none text-dark py-1">Kampanjer</a>
        </div>
      </nav>
    </div>
  </div>
</header>

<style>
  /* Mobile layout (≤ 640px) */
  #header-top {
    display: flex;
    flex-direction: column;
    padding: 0 20px;
  }

  #logo {
    width: 100%;
    padding: 0;
  }

  #logo img {
    width: 100%;
    max-width: 100%;
    height: auto;
  }

  #search-icons {
    width: 100%;
    flex-wrap: wrap;
    gap: 1rem;
    padding: 0;
  }

  #search {
    flex: 1;
    min-width: 200px;
  }

  #nav {
    padding: 0 20px;
  }

  #links {
    flex-direction: column;
  }

  #links a {
    padding: 0.5rem 0;
  }

  /* Desktop layout (> 640px) */
  @media (min-width: 641px) {
    #header-top {
      flex-direction: row;
      justify-content: space-between;
      align-items: center;
      padding: 0 20px;
    }

    #logo {
      width: auto;
      padding-right: 20px;
    }

    #logo img {
      width: auto;
      max-width: 300px;
    }

    #search-icons {
      width: auto;
      padding: 0;
    }

    #nav {
      padding: 0 20px;
    }

    #links {
      flex-direction: row;
      gap: 2rem;
    }

    #links a {
      padding: 0.5rem 0;
    }
  }
</style>
