<header id="header-main" class="border-bottom">
  <!-- Main container -->
  <div id="header-main-container" class="container-fluid px-0">
    <!-- Top section -->
    <div id="header-top-section" class="py-3">
      <!-- Logo -->
      <div id="header-logo" class="text-center mb-3">
        <a
          id="header-logo-link"
          href="/"
          class="text-decoration-none d-inline-block w-100"
          aria-label="Freaky Fashion startsida"
        >
          <img
            id="header-logo-image"
            src="https://placehold.co/1200x400"
            alt="Freaky Fashion Logo"
            class="img-fluid w-100"
            style="object-fit: contain"
          />
        </a>
      </div>

      <!-- Search and icons container -->
      <div
        id="header-search-icons"
        class="d-flex justify-content-center align-items-center"
      >
        <!-- Search bar -->
        <div id="header-search" class="me-3">
          <form
            id="header-search-form"
            action="/search"
            method="GET"
            class="d-flex"
          >
            <input
              id="header-search-input"
              type="text"
              name="q"
              placeholder="Sök produkt"
              class="form-control me-2"
            />
            <button
              id="header-search-button"
              type="submit"
              class="btn btn-dark"
              aria-label="Sök"
            >
              <i id="header-search-icon" class="fas fa-search"></i>
            </button>
          </form>
        </div>

        <!-- Icons -->
        <div id="header-icons" class="d-flex">
          <a
            id="header-favorite-link"
            href="#"
            class="text-dark text-decoration-none me-3"
            aria-label="Favoriter"
          >
            <i id="header-favorite-icon" class="far fa-heart fs-5"></i>
          </a>
          <a
            id="header-cart-link"
            href="#"
            class="text-dark text-decoration-none"
            aria-label="Varukorg"
          >
            <i id="header-cart-icon" class="fas fa-shopping-cart fs-5"></i>
          </a>
        </div>
      </div>
    </div>

    <!-- Navigation links -->
    <div id="header-nav" class="border-top">
      <nav id="header-menu" class="py-2">
        <!-- Links-->
        <div id="header-links" class="d-flex">
          <a
            id="header-link-news"
            href="#"
            class="text-decoration-none text-dark py-1"
            >Nyheter</a
          >
          <a
            id="header-link-toplist"
            href="#"
            class="text-decoration-none text-dark py-1"
            >Topplistan</a
          >
          <a
            id="header-link-sale"
            href="#"
            class="text-decoration-none text-dark py-1"
            >Rea</a
          >
          <a
            id="header-link-campaigns"
            href="#"
            class="text-decoration-none text-dark py-1"
            >Kampanjer</a
          >
        </div>
      </nav>
    </div>
  </div>
</header>

