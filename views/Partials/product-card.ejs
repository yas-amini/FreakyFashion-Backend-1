<!-- Product Card  -->
<a
  href="/products/<%= product.id %>"
  class="text-decoration-none d-block h-100"
  id="link-<%= cardIdSuffix %>"
>
  <div class="card h-100 shadow-sm" id="card-<%= cardIdSuffix %>">
    <!-- Image Wrapper for heart icon overlay -->
    <div class="position-relative" id="img-wrapper-<%= cardIdSuffix %>">
      <!-- Product Image -->
      <img
        src="<%= product.image_url || '/placeholder.svg?height=600&width=500' %>"
        alt="<%= product.name %>"
        class="card-img-top"
        id="img-<%= cardIdSuffix %>"
        style="aspect-ratio: 5 / 6; object-fit: cover"
      />

      <!-- Heart Icon Container overlaying the image -->
      <div
        class="position-absolute bottom-0 end-0 p-2"
        id="heart-wrapper-<%= cardIdSuffix %>"
      >
        <button
          type="button"
          class="btn btn-sm btn-light rounded-circle"
          aria-label="Favoritmarkera <%= product.name %>"
          id="heart-btn-<%= cardIdSuffix %>"
          onclick="event.preventDefault(); alert('Favorit klickad f√∂r <%= product.name %>');"
        >
          <!-- Heart Icon-->
          <i
            class="far fa-heart text-danger"
            id="heart-icon-<%= cardIdSuffix %>"
          ></i>
        </button>
      </div>
    </div>

    <!-- Text Content Container -->
    <div class="card-body d-flex flex-column" id="content-<%= cardIdSuffix %>">
      <!-- Product Name -->
      <h5 class="card-title fs-6 mb-1" id="name-<%= cardIdSuffix %>">
        <%= product.name %>
      </h5>
      <!-- Product Brand -->
      <p class="card-text text-muted small mb-1" id="brand-<%= cardIdSuffix %>">
        <%= product.brand %>
      </p>
      <!-- Product Price -->
      <p class="card-text fw-bold mt-auto" id="price-<%= cardIdSuffix %>">
        <%= product.price %> SEK
      </p>
    </div>
  </div>
</a>
