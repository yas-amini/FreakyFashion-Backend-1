<!-- Product Card  -->
<a
  id="link-<%= productCardOrder %>"
  href="/products/<%= product.id %>"
  class="text-decoration-none d-block h-100"
>
  <div id="card-<%= productCardOrder %>" class="card h-100 shadow-sm">
    <!-- Image Wrapper for heart icon overlay -->
    <div id="img-wrapper-<%= productCardOrder %>" class="position-relative">
      <!-- Product Image -->
      <img
        id="img-<%= productCardOrder %>"
        src="<%= product.image_url || '/placeholder.svg?height=600&width=500' %>"
        alt="<%= product.name %>"
        class="card-img-top"
        style="aspect-ratio: 5 / 6; object-fit: cover"
      />

      <!-- Heart Icon Container overlaying the image -->
      <div
        id="heart-wrapper-<%= productCardOrder %>"
        class="position-absolute bottom-0 end-0 p-2"
      >
        <button
          id="heart-btn-<%= productCardOrder %>"
          type="button"
          class="btn btn-sm btn-light rounded-circle"
          aria-label="Favoritmarkera <%= product.name %>"
          onclick="event.preventDefault(); alert('Favorit klickad f√∂r <%= product.name %>');"
        >
          <!-- Heart Icon-->
          <i
            id="heart-icon-<%= productCardOrder %>"
            class="far fa-heart text-danger"
          ></i>
        </button>
      </div>
    </div>

    <!-- Text Content Container -->
    <div
      id="content-<%= productCardOrder %>"
      class="card-body d-flex flex-column"
    >
      <!-- Product Name -->
      <h5 id="name-<%= productCardOrder %>" class="card-title fs-6 mb-1">
        <%= product.name %>
      </h5>
      <!-- Product Brand -->
      <p
        id="brand-<%= productCardOrder %>"
        class="card-text text-muted small mb-1"
      >
        <%= product.brand %>
      </p>
      <!-- Product Price -->
      <p id="price-<%= productCardOrder %>" class="card-text fw-bold mt-auto">
        <%= product.price %> SEK
      </p>
    </div>
  </div>
</a>
