<!-- ===== PRODUCT CARD COMPONENT ===== -->
<!-- 
  A reusable card component that displays a single product.
  Features:
  - Product image with favorite button overlay
  - Product name, brand, and price
  - Clickable card that links to product details
  - Responsive design with consistent aspect ratio
-->
<a
  id="card-link-<%= productCardOrder %>"
  href="/products/<%= product.id %>"
  class="text-decoration-none d-block h-100"
>
  <div id="card-<%= productCardOrder %>" class="card h-100 shadow-sm">
    <!-- Product Image Section -->
    <div
      id="card-image-wrapper-<%= productCardOrder %>"
      class="position-relative"
    >
      <!-- Main Product Image -->
      <img
        id="card-image-<%= productCardOrder %>"
        src="<%= product.image_url || '/placeholder.svg?height=600&width=500' %>"
        alt="<%= product.name %>"
        class="card-img-top"
        style="aspect-ratio: 5 / 6; object-fit: cover"
      />

      <!-- Favorite Button Overlay -->
      <div
        id="card-favorite-wrapper-<%= productCardOrder %>"
        class="position-absolute bottom-0 end-0 p-2"
      >
        <button
          id="card-favorite-button-<%= productCardOrder %>"
          type="button"
          class="btn btn-sm btn-light rounded-circle"
          aria-label="Favoritmarkera <%= product.name %>"
          onclick="event.preventDefault(); alert('Favorit klickad f√∂r <%= product.name %>');"
        >
          <i
            id="card-favorite-icon-<%= productCardOrder %>"
            class="far fa-heart text-danger"
          ></i>
        </button>
      </div>
    </div>

    <!-- Product Information Section -->
    <div
      id="card-content-<%= productCardOrder %>"
      class="card-body d-flex flex-column"
    >
      <!-- Product Title -->
      <h5 id="card-title-<%= productCardOrder %>" class="card-title fs-6 mb-1">
        <%= product.name %>
      </h5>
      <!-- Product Brand -->
      <p
        id="card-brand-<%= productCardOrder %>"
        class="card-text text-muted small mb-1"
      >
        <%= product.brand %>
      </p>
      <!-- Product Price -->
      <p
        id="card-price-<%= productCardOrder %>"
        class="card-text fw-bold mt-auto"
      >
        <%= product.price %> SEK
      </p>
    </div>
  </div>
</a>
