<!-- Product Card  -->
<a
  href="/products/<%= product.id %>"
  class="text-decoration-none d-block h-100"
  id="product-card-link-<%= cardIdSuffix %>"
>
  <div class="card h-100 shadow-sm" id="product-card-<%= cardIdSuffix %>">
    <%# h-100 for equal height cards in a row, shadow-sm for subtle shadow %>

    <!-- Image Wrapper for heart icon overlay -->
    <div
      class="position-relative"
      id="product-card-image-wrapper-<%= cardIdSuffix %>"
    >
      <!-- Product Image -->
      <img
        src="<%= product.image_url || '/placeholder.svg?height=600&width=500' %>"
        alt="<%= product.name %>"
        class="card-img-top"
        id="product-card-img-<%= cardIdSuffix %>"
        style="aspect-ratio: 5 / 6; object-fit: cover"
      />

      <!-- Heart Icon Container: Absolute position, overlaying the image -->
      <div
        class="position-absolute bottom-0 end-0 p-2"
        id="product-card-heart-container-<%= cardIdSuffix %>"
      >
        <button
          type="button"
          class="btn btn-sm btn-light rounded-circle"
          aria-label="Favoritmarkera <%= product.name %>"
          id="product-card-heart-btn-<%= cardIdSuffix %>"
          onclick="event.preventDefault(); alert('Favorit klickad f√∂r <%= product.name %>');"
        >
          <i
            class="far fa-heart text-danger"
            id="product-card-heart-icon-<%= cardIdSuffix %>"
          ></i>
        </button>
      </div>
    </div>

    <!-- Text Content Container -->
    <div
      class="card-body d-flex flex-column"
      id="product-card-text-container-<%= cardIdSuffix %>"
    >
      <!-- Product Name -->
      <h5
        class="card-title fs-6 mb-1"
        id="product-card-name-<%= cardIdSuffix %>"
      >
        <%= product.name %>
      </h5>
      <!-- Product Brand -->
      <p
        class="card-text text-muted small mb-1"
        id="product-card-brand-<%= cardIdSuffix %>"
      >
        <%= product.brand %>
      </p>
      <!-- Product Price -->
      <p
        class="card-text fw-bold mt-auto"
        id="product-card-price-<%= cardIdSuffix %>"
      >
        <%# mt-auto pushes price to bottom if card heights vary and flex-column
        is used %> <%= product.price %> SEK
      </p>
    </div>
  </div>
</a>
