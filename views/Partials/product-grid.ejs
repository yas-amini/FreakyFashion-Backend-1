<!-- ===== PRODUCT GRID SECTION ===== -->
<!-- 
  Responsive product grid layout:
  - Mobile: 1 column
  - Tablet: 2 columns
  - Desktop: 4 columns
  - Uses product-card partial for each item
-->
<div class="row g-3 g-sm-4 justify-content-center" id="product-grid">
  <% products.forEach((product, index) => { %>
  <!-- Product Card Column -->
  <div class="col-12 col-custom" id="product-grid-item-<%= index %>">
    <%- include('product-card', { product: product, productCardOrder: index })
    %>
  </div>
  <% }) %>
</div>
