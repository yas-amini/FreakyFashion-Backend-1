<!-- Site Features  -->
<section class="py-4 py-md-5" id="features">
  <div class="container" id="features-container">
    <!-- Features Row-->
    <div class="row text-center g-3 g-sm-4" id="features-row">
      <!-- Feature Item 1: Gratis frakt och returer -->
      <div class="col-12 col-custom" id="shipping">
        <a
          href="#"
          class="text-decoration-none text-dark d-block p-3 border rounded h-100"
          id="shipping-link"
        >
          <%# d-block p-3 border rounded h-100 for styling and equal height %>
          <div id="shipping-icon-wrapper">
            <!-- Globe icon -->
            <i class="fas fa-globe-americas fs-2 mb-2" id="shipping-icon"></i>
          </div>
          <div id="shipping-text-wrapper">
            <p class="mb-0 fw-medium" id="shipping-text">
              Gratis frakt och returer
            </p>
          </div>
        </a>
      </div>

      <!-- Feature Item 2: Expressfrakt -->
      <div class="col-12 col-custom" id="express">
        <a
          href="#"
          class="text-decoration-none text-dark d-block p-3 border rounded h-100"
          id="express-link"
        >
          <div id="express-icon-wrapper">
            <!-- Plane icon -->
            <i class="fas fa-plane fs-2 mb-2" id="express-icon"></i>
          </div>
          <div id="express-text-wrapper">
            <p class="mb-0 fw-medium" id="express-text">Expressfrakt</p>
          </div>
        </a>
      </div>

      <!-- Feature Item 3: Säkra betalningar -->
      <div class="col-12 col-custom" id="payment">
        <a
          href="#"
          class="text-decoration-none text-dark d-block p-3 border rounded h-100"
          id="payment-link"
        >
          <div id="payment-icon-wrapper">
            <!-- Shield icon -->
            <i class="fas fa-shield-alt fs-2 mb-2" id="payment-icon"></i>
          </div>
          <div id="payment-text-wrapper">
            <p class="mb-0 fw-medium" id="payment-text">Säkra betalningar</p>
          </div>
        </a>
      </div>

      <!-- Feature Item 4: Nyheter varje dag -->
      <div class="col-12 col-custom" id="news">
        <a
          href="#"
          class="text-decoration-none text-dark d-block p-3 border rounded h-100"
          id="news-link"
        >
          <div id="news-icon-wrapper">
            <!-- Smile icon -->
            <i class="far fa-smile fs-2 mb-2" id="news-icon"></i>
          </div>
          <div id="news-text-wrapper">
            <p class="mb-0 fw-medium" id="news-text">Nyheter varje dag</p>
          </div>
        </a>
      </div>
    </div>
  </div>
</section>

<style>
  /* Mobile: <640px, 1 column (vertical stack) */
  #features-row .col-custom {
    width: 100%;
    margin-bottom: 1rem;
  }

  /* Tablet: ≥640px, 2 columns */
  @media (min-width: 640px) {
    #features-row .col-custom {
      width: 50%;
      flex: 0 0 50%;
    }
  }

  /* Desktop: ≥1024px, 4 columns */
  @media (min-width: 1024px) {
    #features-row .col-custom {
      width: 25%;
      flex: 0 0 25%;
    }
  }
</style>
