<!-- Site Features  -->
<section id="features" class="py-4 py-md-5">
  <div id="features-container" class="container">
    <!-- Features Row-->
    <div id="features-row" class="row text-center g-3 g-sm-4">
      <!-- Feature Item 1: Gratis frakt och returer -->
      <div id="shipping" class="col-12 col-custom">
        <a
          id="shipping-link"
          href="#"
          class="text-decoration-none text-dark d-block p-3 h-100"
        >
          <%# d-block p-3 border rounded h-100 for styling and equal height %>
          <div id="shipping-icon-wrapper">
            <!-- Globe icon -->
            <i id="shipping-icon" class="fas fa-globe-americas fs-2 mb-2"></i>
          </div>
          <div id="shipping-text-wrapper">
            <p id="shipping-text" class="mb-0 fw-medium">
              Gratis frakt och returer
            </p>
          </div>
        </a>
      </div>

      <!-- Feature Item 2: Expressfrakt -->
      <div id="express" class="col-12 col-custom">
        <a
          id="express-link"
          href="#"
          class="text-decoration-none text-dark d-block p-3 h-100"
        >
          <div id="express-icon-wrapper">
            <!-- Plane icon -->
            <i id="express-icon" class="fas fa-plane fs-2 mb-2"></i>
          </div>
          <div id="express-text-wrapper">
            <p id="express-text" class="mb-0 fw-medium">Expressfrakt</p>
          </div>
        </a>
      </div>

      <!-- Feature Item 3: Säkra betalningar -->
      <div id="payment" class="col-12 col-custom">
        <a
          id="payment-link"
          href="#"
          class="text-decoration-none text-dark d-block p-3 h-100"
        >
          <div id="payment-icon-wrapper">
            <!-- Shield icon -->
            <i id="payment-icon" class="fas fa-shield-alt fs-2 mb-2"></i>
          </div>
          <div id="payment-text-wrapper">
            <p id="payment-text" class="mb-0 fw-medium">Säkra betalningar</p>
          </div>
        </a>
      </div>

      <!-- Feature Item 4: Nyheter varje dag -->
      <div id="news" class="col-12 col-custom">
        <a
          id="news-link"
          href="#"
          class="text-decoration-none text-dark d-block p-3 h-100"
        >
          <div id="news-icon-wrapper">
            <!-- Smile icon -->
            <i id="news-icon" class="far fa-smile fs-2 mb-2"></i>
          </div>
          <div id="news-text-wrapper">
            <p id="news-text" class="mb-0 fw-medium">Nyheter varje dag</p>
          </div>
        </a>
      </div>
    </div>
  </div>
</section>

<style>
  /* Mobile: <640px, 1 column (vertical stack) */
  #features-row .col-custom {
    width: 100%;
    margin-bottom: 1rem;
  }

  /* Tablet: ≥640px, 2 columns */
  @media (min-width: 640px) {
    #features-row .col-custom {
      width: 50%;
      flex: 0 0 50%;
    }
  }

  /* Desktop: ≥1024px, 4 columns */
  @media (min-width: 1024px) {
    #features-row .col-custom {
      width: 25%;
      flex: 0 0 25%;
    }
  }
</style>
