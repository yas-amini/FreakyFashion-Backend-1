<!-- ===== SITE FEATURES SECTION ===== -->
<!-- 
  Features section displaying key service offerings:
  - Free shipping and returns
  - Express shipping
  - Secure payments
  - Daily updates
  - Responsive grid layout (1/2/4 columns)
-->
<section id="features" class="py-4 py-md-5">
  <div id="features-container" class="container">
    <!-- Features Row-->
    <div id="features-row" class="row g-2 g-sm-3">
      <!-- Feature Item 1: Gratis frakt och returer -->
      <div id="shipping" class="col-12 col-custom">
        <a
          id="shipping-link"
          href="#"
          class="text-decoration-none text-dark d-block p-2 h-100 feature-item-content"
        >
          <!-- Globe icon -->
          <i id="shipping-icon" class="fas fa-globe-americas fs-2"></i>
          <p id="shipping-text" class="mb-0 fw-medium">
            Gratis frakt och returer
          </p>
        </a>
      </div>

      <!-- Feature Item 2: Expressfrakt -->
      <div id="express" class="col-12 col-custom">
        <a
          id="express-link"
          href="#"
          class="text-decoration-none text-dark d-block p-2 h-100 feature-item-content"
        >
          <!-- Plane icon -->
          <i id="express-icon" class="fas fa-plane fs-2"></i>
          <p id="express-text" class="mb-0 fw-medium">Expressfrakt</p>
        </a>
      </div>

      <!-- Feature Item 3: Säkra betalningar -->
      <div id="payment" class="col-12 col-custom">
        <a
          id="payment-link"
          href="#"
          class="text-decoration-none text-dark d-block p-2 h-100 feature-item-content"
        >
          <!-- Shield icon -->
          <i id="payment-icon" class="fas fa-shield-alt fs-2"></i>
          <p id="payment-text" class="mb-0 fw-medium">Säkra betalningar</p>
        </a>
      </div>

      <!-- Feature Item 4: Nyheter varje dag -->
      <div id="news" class="col-12 col-custom">
        <a
          id="news-link"
          href="#"
          class="text-decoration-none text-dark d-block p-2 h-100 feature-item-content"
        >
          <!-- Smile icon -->
          <i id="news-icon" class="far fa-smile fs-2"></i>
          <p id="news-text" class="mb-0 fw-medium">Nyheter varje dag</p>
        </a>
      </div>
    </div>
  </div>
</section>
