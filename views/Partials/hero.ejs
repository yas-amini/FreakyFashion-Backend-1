<!-- Hero Container -->
<section class="bg-light py-5" id="hero">
  <div class="container" id="wrapper">
    <!-- Hero Row:  image and text  -->
    <div class="row align-items-center" id="content">
      <!-- Image Column -->
      <div class="col-12" id="image-col">
        <!-- Image Wrapper -->
        <div id="image-wrapper" class="text-center">
          <img
            src="<%= hero.image_url || '/placeholder.svg?height=350&width=500' %>"
            alt="<%= hero.title || 'Freaky Fashion Hero' %>"
            class="img-fluid rounded"
            id="image"
          />
        </div>
      </div>

      <!-- Text Content Column -->
      <div class="col-12" id="text-col">
        <!-- Text Container -->
        <div id="text-wrapper" class="text-center">
          <!-- Heading -->
          <h2 class="display-4 fw-bold mb-3" id="title"><%= hero.title %></h2>
          <!-- Paragraph -->
          <p class="lead text-muted" id="description">
            <%= hero.description %>
          </p>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  @media (min-width: 1024px) {
    #image-col {
      order: 2;
      width: 50%;
    }
    #text-col {
      order: 1;
      width: 50%;
    }
    #image-wrapper {
      text-align: start;
    }
    #text-wrapper {
      text-align: start;
    }
    #content {
      display: flex;
    }
  }
  @media (max-width: 1023px) {
    #image-col {
      order: 1;
      margin-bottom: 2rem;
    }
    #text-col {
      order: 2;
    }
    #image-wrapper {
      text-align: center;
    }
    #text-wrapper {
      text-align: center;
    }
  }
</style>
