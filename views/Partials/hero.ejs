<!-- ===== HERO SECTION ===== -->
<!-- 
  Hero section featuring:
  - Large promotional image
  - Title and description
  - Responsive layout (stacked on mobile, side-by-side on desktop)
-->
<section id="hero-section" class="bg-light py-5">
  <div id="hero-wrapper" class="container">
    <!-- Hero Row: image and text -->
    <div id="hero-content-row" class="row align-items-center">
      <!-- Image Column -->
      <div id="hero-image-column" class="col-12">
        <!-- Image Wrapper -->
        <div id="hero-image-wrapper" class="text-center">
          <img
            id="hero-image"
            src="<%= hero.image_url || '/placeholder.svg?height=350&width=500' %>"
            alt="<%= hero.title || 'Freaky Fashion Hero' %>"
            class="img-fluid rounded"
          />
        </div>
      </div>

      <!-- Text Content Column -->
      <div id="hero-text-column" class="col-12">
        <!-- Text Container -->
        <div id="hero-text-wrapper" class="text-center">
          <!-- Heading -->
          <h2 id="hero-title" class="display-4 fw-bold mb-3">
            <%= hero.title %>
          </h2>
          <!-- Paragraph -->
          <p id="hero-description" class="lead text-muted">
            <%= hero.description %>
          </p>
        </div>
      </div>
    </div>
  </div>
</section>
