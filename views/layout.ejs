<!-- ===== MAIN LAYOUT TEMPLATE ===== -->
<!-- 
  Base layout template for all pages:
  - Responsive viewport meta tag
  - Bootstrap for styling
  - Font Awesome for icons
  - Custom styles from style.css
  - Sticky footer layout
-->
<!DOCTYPE html>
<html lang="sv">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!-- Dynamically sets the page title. If a 'title' variable is passed, it uses that; otherwise, it defaults to 'Freaky Fashion'. -->
    <title>
      <%= typeof title !== 'undefined' ? title : 'Freaky Fashion' %>
    </title>
    <!-- Bootstrap CSS -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <!-- Font Awesome -->
    <link
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css"
      rel="stylesheet"
    />
    <!-- Custom CSS -->
    <link href="/stylesheets/style.css" rel="stylesheet" />
  </head>
  <body>
    <!-- Header -->
    <!-- Includes the header partial, containing the site's main navigation and branding. -->
    <%- include('partials/header') %>

    <!-- Main Content -->
    <main><%- body %></main>

    <!-- Footer -->
    <%- include('partials/footer') %>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
