<div class="container my-4 my-md-5" id="search-results-page-container">
  <!-- Search Results Header -->
  <section id="search-results-info-section" class="mb-4">
    <div id="search-results-heading-wrapper">
      <h1 class="mb-3" id="search-results-main-heading">
        <% if (query && query.trim() !== "") { %> Hittade
        <span id="search-results-count" class="fw-bold"><%= count %></span>
        produkt<%= count !== 1 ? 'er' : '' %> för "<span
          id="search-query-term"
          class="fw-bold"
          ><%= query %></span
        >" <% } else if (count > 0) { %> Visar
        <span id="search-results-count" class="fw-bold"><%= count %></span>
        produkt<%= count !== 1 ? 'er' : '' %> <% } else { %> Inga produkter
        hittades <% } %>
      </h1>
    </div>
  </section>

  <!-- Product Grid or No Results Message -->
  <section id="search-results-content-section" class="mb-4 mb-md-5">
    <% if (products && products.length > 0) { %>
    <div id="search-results-grid-wrapper">
      <%- include('partials/product-grid', { products: products }) %>
    </div>
    <% } else if (query && query.trim() !== "") { %>
    <div id="search-no-results-message-wrapper" class="text-center py-5">
      <i class="fas fa-search fa-3x text-muted mb-3"></i>
      <p class="lead text-muted" id="no-results-message">
        Tyvärr, vi hittade inga produkter som matchar "<%= query %>".
      </p>
      <p class="text-muted">
        Prova att söka efter något annat eller kolla våra
        <a href="/">populära produkter</a>.
      </p>
    </div>
    <% } else { %>
    <div
      id="search-no-products-available-message-wrapper"
      class="text-center py-5"
    >
      <i class="fas fa-box-open fa-3x text-muted mb-3"></i>
      <p class="lead text-muted" id="no-products-available-message">
        Det finns för närvarande inga produkter att visa.
      </p>
      <p class="text-muted">
        Kom tillbaka senare eller besök vår <a href="/">startsida</a>.
      </p>
    </div>
    <% } %>
  </section>

  <!-- Site Features Section -->
  <div id="search-results-site-features-section">
    <%- include('partials/site-features') %>
  </div>
</div>
